<h2 align="center"><strong>Title:</strong>
  <%= @article.title %> </h2>


<div class='well col-xs-8 col-xs-offset-2'
 <ul class='listing'>
    <div class='row center'>
      <div class='col-md-4 col-md-offset-4'>
        <li> Created by: </li>
        <li> <%= link_to gravatar_for(@article.user), user_path(user) %> </li>
        <li class='article-title'> <%= link_to @user.user.username, user_path(@article.user) %> </li>
        <li><small> <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
      </div>
    </div>
  </ul>
   <h4 align='center description' ><strong>Description:</strong></h4>
   <hr>
  <%= simple_format(@article.description) %>
<div class="article_actions">
<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-xs btn-primary" %>
<%= link_to 'delete', articles_path(@article), method: :delete, data: {confirm: 'are you sure?'},class: 'btn btn-xs btn-danger' %>
<%= link_to 'view all', articles_path, class: 'btn btn-xs btn-primary' %>
</div>


