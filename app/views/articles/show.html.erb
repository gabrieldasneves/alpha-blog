<h2 align="center"><strong>Title:</strong>
  <%= @article.title %> </h2>


<div class='well col-xs-8 col-xs-offset-2'
   <h4 align='center' ><strong>Description:</strong></h4>
   <hr>
  <%= simple_format(@article.description) %>
<div class="article_actions">
<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-xs btn-primary" %>
<%= link_to 'delete', articles_path(@article), method: :delete, data: {confirm: 'are you sure?'},class: 'btn btn-xs btn-danger' %>
<%= link_to 'view all', articles_path, class: 'btn btn-xs btn-primary' %>
</div>